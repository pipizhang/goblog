<ul class="nav nav-tabs">
  <li> <%= link_to tag_icon(:list, pat(:list)), url(:categories, :index) %></li>
  <li> <%= link_to tag_icon(:plus, pat(:new)), url(:categories, :new) %></li>
  <li class="active"> <%= link_to tag_icon(:edit, pat(:edit)), url(:categories, :edit, :id => @category.id) %></li>
</ul>
<div class="tabs-content">
  <% form_for :category, url(:categories, :update, :id => @category.id), :method => :put, :class => 'form-horizontal' do |f| %>
    <%= partial 'categories/form', :locals => { :f => f } %>
  <% end %>
</div>
